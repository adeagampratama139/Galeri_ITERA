    private void jbtnExitActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        //Tombol keluar (exit)
        System.exit(0);
    }                                        

    private void jbtnResetActionPerformed(java.awt.event.ActionEvent evt) {                                          
        // TODO add your handling code here:
        //Tombol Reset
        jtxtUserName.setText(null);
        jPassword.setText(null);
        
    }                                         

    private void jbtnLoginActionPerformed(java.awt.event.ActionEvent evt) {                                          
        // TODO add your handling code here:
        //TOMBOL LOGIN
        String password = jPassword.getText();
        String username = jtxtUserName.getText();
        if (username.equals("admin") && (password.equals("user"))){
            
            this.dispose();
            
            crudForm info = new crudForm();
            info.setVisible(true);
        }else{
            JOptionPane.showMessageDialog(null, "Salah username atau password", "Login Gagal", JOptionPane.ERROR_MESSAGE);
            jPassword.setText(null);
            jtxtUserName.setText(null);
        }
    }                                         

